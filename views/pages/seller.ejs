<!DOCTYPE html>
<html lang="en">
    <%- include("../templates/head.ejs") %>
 
<head>
    <%- include("../templates/navBar.ejs") %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seller Options</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .fade-out {
            transition: opacity 1s ease-out;
            opacity: 0;
        }
    </style>
</head>
<body>
    <% if (msg) { %>
        <p id="message" class="<%= type === 'success' ? 'text-success' : 'text-error' %>">
            <%= msg %>
        </p>
    <% } %>  
    
    <div class="container text-center mt-5">
        <%- include("../components/formSellerAuth.ejs") %>
        <div class="mt-4">
            <p>Not registered yet? <a href="/registerSeller">Register here</a>.</p>
        </div>
    </div>

    <script>
        // Function to hide the message after 1 second
        setTimeout(() => {
            const message = document.getElementById('message');
            if (message) {
                message.classList.add('fade-out'); 
                setTimeout(() => {
                    message.remove(); 
                }, 1000); 
            }
        }, 1000); 
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
